<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title mb-0">Team erstellen</h2>
                </div>
                <div class="card-body">
                    <form action="/team/create" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        
                        <div class="mb-3">
                            <label for="name" class="form-label">Teamname</label>
                            <input type="text" class="form-control" id="name" name="name" required>
                        </div>

                        <div class="mb-3">
                            <label for="nation" class="form-label">Nation</label>
                            <select class="form-select" id="nation" name="nation" required>
                                <option value="">Bitte wählen...</option>
                                <option value="AUT">Österreich</option>
                                <option value="GER">Deutschland</option>
                                <option value="SUI">Schweiz</option>
                                <option value="ITA">Italien</option>
                                <option value="FRA">Frankreich</option>
                                <option value="USA">USA</option>
                                <option value="NOR">Norwegen</option>
                                <option value="SWE">Schweden</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="city" class="form-label">Heimatort</label>
                            <input type="text" class="form-control" id="city" name="city" required>
                        </div>

                        <div class="alert alert-info mb-4">
                            <i class="fas fa-info-circle me-2"></i>
                            Startbudget: 1.000.000 €
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-check me-2"></i>Team erstellen
                            </button>
                            <a href="/team" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Zurück
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 