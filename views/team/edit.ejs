<%- include('../partials/header') %>

<div class="container mt-4">
    <h1>Team bearbeiten</h1>
    
    <div class="card">
        <div class="card-body">
            <form action="/team/update/<%= team.id %>" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Teamname</label>
                    <input type="text" class="form-control" id="name" name="name" 
                           value="<%= team.name %>" required>
                </div>
                
                <div class="mb-3">
                    <label for="nation" class="form-label">Nation</label>
                    <select class="form-select" id="nation" name="nation" required>
                        <option value="AUT" <%= team.nation === 'AUT' ? 'selected' : '' %>>Österreich</option>
                        <option value="GER" <%= team.nation === 'GER' ? 'selected' : '' %>>Deutschland</option>
                        <option value="SUI" <%= team.nation === 'SUI' ? 'selected' : '' %>>Schweiz</option>
                        <option value="ITA" <%= team.nation === 'ITA' ? 'selected' : '' %>>Italien</option>
                        <option value="FRA" <%= team.nation === 'FRA' ? 'selected' : '' %>>Frankreich</option>
                        <option value="NOR" <%= team.nation === 'NOR' ? 'selected' : '' %>>Norwegen</option>
                        <option value="SWE" <%= team.nation === 'SWE' ? 'selected' : '' %>>Schweden</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="budget" class="form-label">Budget</label>
                    <input type="number" class="form-control" id="budget" name="budget" 
                           value="<%= team.budget %>" readonly>
                    <div class="form-text">Das Budget kann nur durch Spielaktionen verändert werden.</div>
                </div>
                
                <div class="mb-3">
                    <label for="reputation" class="form-label">Reputation</label>
                    <input type="number" class="form-control" id="reputation" name="reputation" 
                           value="<%= team.reputation %>" min="0" max="100" required>
                </div>
                
                <button type="submit" class="btn btn-primary">Änderungen speichern</button>
                <a href="/team/<%= team.id %>" class="btn btn-secondary">Abbrechen</a>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer') %> 