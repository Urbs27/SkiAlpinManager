# Umgebung
NODE_ENV=development
PORT=3000

# Datenbank (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ski_manager_dev
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false

# Session & Security
SESSION_SECRET=dev-secret-key
COOKIE_SECRET=dev-cookie-secret
JWT_SECRET=dev-jwt-secret

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:4200

# Rate Limiting
RATE_LIMIT_WINDOW=900000  # 15 Minuten
RATE_LIMIT_MAX=1000      # Höheres Limit für Entwicklung

# Cache
CACHE_TTL=300            # 5 Minuten
CACHE_ENABLED=true       # Aktiviert für Performance-Tests

# Logging
LOG_LEVEL=debug
LOG_TO_FILE=true
LOG_PATH=./logs/dev.log

# Development-Spezifisch
SKIP_AUTH=false          # Auth aktiviert
MOCK_EXTERNAL_SERVICES=false
DEBUG=true
VERBOSE=true

# Mail (für Entwicklung)
SMTP_HOST=localhost
SMTP_PORT=1025          # Standard-Port für MailHog
SMTP_USER=null
SMTP_PASS=null
MAIL_FROM=dev@localhost

# Temporäre Dateien
TEMP_FILES_PATH=./data/temp
UPLOAD_PATH=./data/uploads