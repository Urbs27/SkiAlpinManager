<%- include('../partials/header') %>

<div class="container mt-4">
    <h1><%= player.first_name %> <%= player.last_name %> bearbeiten</h1>

    <form action="/players/<%= player.id %>?_method=PUT" method="POST">
        <div class="row">
            <!-- Basis-Attribute -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Basis-Attribute</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="technik">Technik</label>
                            <input type="number" class="form-control" id="technik" name="technik" value="<%= player.technik %>" min="0" max="100">
                        </div>
                        <div class="form-group">
                            <label for="kraft">Kraft</label>
                            <input type="number" class="form-control" id="kraft" name="kraft" value="<%= player.kraft %>" min="0" max="100">
                        </div>
                        <!-- Weitere Basis-Attribute -->
                    </div>
                </div>
            </div>

            <!-- Ski-Attribute -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Ski-Attribute</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="gleittechnik">Gleittechnik</label>
                            <input type="number" class="form-control" id="gleittechnik" name="gleittechnik" value="<%= player.gleittechnik %>" min="0" max="100">
                        </div>
                        <!-- Weitere Ski-Attribute -->
                    </div>
                </div>
            </div>

            <!-- Disziplin-Attribute -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Disziplinen</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="dh_skill">Abfahrt</label>
                            <input type="number" class="form-control" id="dh_skill" name="dh_skill" value="<%= player.dh_skill %>" min="0" max="100">
                        </div>
                        <!-- Weitere Disziplin-Attribute -->
                    </div>
                </div>
            </div>

            <!-- Form und Fitness -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Aktuelle Form</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="form">Form</label>
                            <input type="number" class="form-control" id="form" name="form" value="<%= player.form %>" min="0" max="100">
                        </div>
                        <div class="form-group">
                            <label for="fitness">Fitness</label>
                            <input type="number" class="form-control" id="fitness" name="fitness" value="<%= player.fitness %>" min="0" max="100">
                        </div>
                        <div class="form-group">
                            <label for="müdigkeit">Müdigkeit</label>
                            <input type="number" class="form-control" id="müdigkeit" name="müdigkeit" value="<%= player.müdigkeit %>" min="0" max="100">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-success">Speichern</button>
        <a href="/players/<%= player.id %>" class="btn btn-secondary">Abbrechen</a>
    </form>
</div>

<%- include('../partials/footer') %> 