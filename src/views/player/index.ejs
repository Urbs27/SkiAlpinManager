<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <div class="nav">
            <a href="/">Home</a>
            <a href="/player" class="active">Meine Skifahrer</a>
            <a href="/rennen">Rennen</a>
        </div>

        <div class="player-list">
            <h1>Meine Skifahrer</h1>
            
            <a href="/player/create" class="button create-button">Neuen Skifahrer erstellen</a>

            <% if (players && players.length > 0) { %>
                <div class="players-grid">
                    <% players.forEach(player => { %>
                        <div class="player-card">
                            <h2><%= player.name %></h2>
                            <p class="team"><%= player.team %></p>
                            
                            <div class="stats">
                                <div class="stat-item">
                                    <span>Technik:</span>
                                    <div class="stat-bar">
                                        <div class="stat-fill" style="width: <%= player.technik || 0 %>%"></div>
                                        <span class="stat-value"><%= player.technik || 0 %></span>
                                    </div>
                                </div>
                                
                                <div class="stat-item">
                                    <span>Kraft:</span>
                                    <div class="stat-bar">
                                        <div class="stat-fill" style="width: <%= player.kraft || 0 %>%"></div>
                                        <span class="stat-value"><%= player.kraft || 0 %></span>
                                    </div>
                                </div>
                                
                                <div class="stat-item">
                                    <span>Form:</span>
                                    <div class="stat-bar">
                                        <div class="stat-fill" style="width: <%= player.form || 0 %>%"></div>
                                        <span class="stat-value"><%= player.form || 0 %></span>
                                    </div>
                                </div>
                            </div>

                            <div class="player-actions">
                                <a href="/player/<%= player.id %>" class="button">Details</a>
                                <a href="/training/<%= player.id %>" class="button">Training</a>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <p class="no-players">Noch keine Skifahrer erstellt. <a href="/player/create">Erstelle deinen ersten Skifahrer!</a></p>
            <% } %>
        </div>
    </div>
</body>
</html> 