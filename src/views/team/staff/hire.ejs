<%- include('../../partials/header') %>

<div class="container mt-4">
    <h1>Neuen Mitarbeiter für <%= team.name %> einstellen</h1>
    
    <% if (error) { %>
        <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <form action="/team/<%= team.id %>/staff/hire" method="POST">
        <div class="form-group mb-3">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" required>
        </div>
        <div class="form-group mb-3">
            <label for="role">Rolle</label>
            <select class="form-control" id="role" name="role" required>
                <option value="head_coach">Cheftrainer</option>
                <option value="assistant_coach">Co-Trainer</option>
                <option value="technician">Ski-Techniker</option>
                <option value="physio">Physiotherapeut</option>
                <option value="mental_coach">Mentaltrainer</option>
            </select>
        </div>
        <div class="form-group mb-3">
            <label for="quality">Qualität</label>
            <input type="number" class="form-control" id="quality" name="quality" min="50" max="100" required>
        </div>
        <div class="form-group mb-3">
            <label for="salary">Gehalt</label>
            <input type="number" class="form-control" id="salary" name="salary" required>
        </div>
        <div class="form-group mb-3">
            <label for="contract_end">Vertragsende</label>
            <input type="date" class="form-control" id="contract_end" name="contract_end" required>
        </div>
        <button type="submit" class="btn btn-primary">Einstellen</button>
    </form>
</div>

<%- include('../../partials/footer') %> 